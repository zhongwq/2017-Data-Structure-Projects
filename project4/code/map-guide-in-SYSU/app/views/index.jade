  nav.navbar.navbar-fixed-top.navbar-inverse
    .container
      .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='/') Sysu Map
      #navbar.collapse.navbar-collapse
        ul.nav.navbar-nav
          if pageName === '/'
            li.active
              a(href='/') Home
          else
            li
              a(href='/') Home
          if pageName === '/blog'
            li.active
              a(href='/blog') Blog
          else
            li
              a(href='/blog') Blog

  block pageContent
